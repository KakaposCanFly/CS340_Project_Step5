<html>
<h1>Update Sale Order {{sale_order_product.order_number}} Product {{sale_order_product.product_ID}}:</h1>
<form id="update-sale_order_product" action="/sale_order_products" method="post">
    {{!-- <input type="text" id="order_number" name="order_number" placeholder="Order Number"><br>    --}}
    Order Number: <select name="order_number">
        {{#each sale_orders}}
        <option value="{{order_number}}">{{order_number}}</option>
        {{/each}}
    </select><br>
    {{!-- <input type="text" id="product_ID" name="product_ID" placeholder="Product ID"><br> --}}
    Product: <select name="product_ID">
        {{#each products}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="text" id="quantity" name="quantity" placeholder="Quantity"><br>
    <input type="number" step="0.01" id="selling_price" name="selling_price" placeholder="Selling Price"><br>
    <label for="shipping_status">Shipped:</label>
      <select name="shipping_status" id="shipping_status">
        <option value="shipped">Shipped</option>
        <option value="not_shipped">Not Shipped</option>
      </select><br>
    <label for="shipping_date">Shipping Date:</label>
    <input type="date" id="shipping_date" name="shipping_date" value="YYYY-MM-DD"><br>
 </form>
<button onclick="updateSale_Order_Products({{sale_order_product.order_number}},{{sale_order_product.product_ID}})">Update</button>
</html>
