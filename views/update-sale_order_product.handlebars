<html>
<link href="/styles.css" rel="stylesheet" type="text/css" />
<h1>Update Sale Order {{sale_order_product.order_number}} Product {{sale_order_product.product_ID}}:</h1>
<form id="update-sale_order_product" action="/sale_order_products" method="post">
    {{!-- Pre-populate the input fields with the attributes' current values --}}
    Note: Do not enter combinations of Order Number and Product ID that already exist in the table<br><br>
    Order Number: <select name="order_number" id="sale_order-selector">
        {{#each sale_orders}}
        <option value="{{order_number}}">{{order_number}}</option>
        {{/each}}
    </select><br>
    Product ID: <select name="product_ID" id="product-selector">
        {{#each products}}
        <option value="{{id}}">{{id}}</option>
        {{/each}}
    </select><br>
    <input type="text" id="quantity" name="quantity" value="{{sale_order_product.quantity}}"><br>
    <input type="number" step="0.01" id="selling_price" name="selling_price" value="{{sale_order_product.selling_price}}"><br>
    <label for="shipping_status">Shipped:</label>
      <select name="shipping_status" id="shipping_status">
        <option value="Shipped">Shipped</option>
        <option value="not_shipped">Not Shipped</option>
      </select><br>
    <label for="shipping_date">Shipping Date:</label>
    <input type="date" id="shipping_date" name="shipping_date" value="{{sale_order_product.shipping_date}}"><br>
 </form>
<button onclick="updateSale_Order_Products({{sale_order_product.order_number}},{{sale_order_product.product_ID}})">Update</button>
<script defer>selectSale_Order({{sale_order_product.order_number}});</script>
<script defer>selectProduct({{sale_order_product.product_ID}});</script>
</html>
