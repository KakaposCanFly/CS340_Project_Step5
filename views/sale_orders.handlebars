<html>
{{#each foo}}
{{this}}
{{/each}}

<form id='filter_people' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Filter by homeworld </label>
    <select id='homeworld_filter' name="homeworld"> 
        {{#each planets}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="button" value="Filter" onclick="filterPeopleByHomeworld()">
</form>

<form id='search_people' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search people for first name starting with:</label>
    <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
    <input type="button" value="Search" onclick="searchPeopleByFirstName()">
</form>

<h3>Current people:</h3>
<table>
    <thead> 
        <th>customer_ID</th> 
        <th>order_date</th> 
        <th>cc_number</th>
        <th>cc_exp_date</th>  
        <th>delivery_status</th>  
        <th>paid_status</th>  
    </thead> 
    <tbody>
        {{#each people}} 
        <tr> 
            <td>{{customer_ID}}</td> 
            <td>{{order_date}}</td> 
            <td>{{cc_number}}</td> 
            <td>{{cc_exp_date}}</td>
            <td>{{delivery_status}}</td>
            <td>{{paid_status}}</td>
            <td><button onclick="deletePerson({{id}})">Delete</button></td>
            <td><a href="/people/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

<h3>Add new people:</h3>
<form id="addperson" action="/people" method="post">
    <input type="text" id="customer_ID" name="customer_ID" placeholder="Customer ID"><br>
    <input type="text" id="cc_number" name="cc_number" placeholder="Credit Card Number"><br>
    <input type="text" id="cc_exp_date" name="cc_exp_date" placeholder="Credit Crad Exp Date"><br>
    <label for="order_status">Delivery Status:</label>
      <select name="order_status" id="order_complete">
        <option value="delivered">Delivered</option>
        <option value="not_delivered">Not Delivered</option>
      </select><br>
    <label for="payment">Delivery Status:</label>
      <select name="payment" id="customer_paid">
        <option value="paid">Paid</option>
        <option value="not_paid">Not Paid</option>
      </select><br>
    <input type="submit" value="Add"><br><br>
    <input type="text" id="ord_num" name="ord_num" placeholder="order_number">
    <br><input type="submit" value="Update">
 </form>
<br/>

</html>
