<html>

<link href="styles.css" rel="stylesheet" type="text/css" />
{{!-- Header and nav bar for customer page --}}
<h1>Quality Threads</h1>
<div class="topnav">
    <li><a class="active" href="index.html">Home</a></li>
    <li> <a href='/customers'>Customers</a></li>
    <li> <a href='/distributors'>Distributors</a></li>
    <li> <a href='/products'>Products</a></li>
    <li> <a href='/sale_orders'>Sale Orders</a></li>
    <li> <a href='/sale_order_products'>Sale Order Products</a></li>
  </div>

<h3>Customers</h3>
<table>
    {{!-- column headers for the database --}}
    <thead> 
        <th>customer_ID</th>
        <th>customer_first_name</th> 
        <th>customer_last_name</th> 
        <th>customer_email</th>
        <th>customer_phone_number</th>  
        <th>customer_address</th>  
        <th>customer_birthdate</th>  
    </thead> 
    <tbody>
    {{!-- used to get the database and populate appropriate columns --}}
        {{#each customers}} 
            <th>{{customer_ID}}</th> 
            <td>{{customer_first_name}}</td> 
            <td>{{customer_last_name}}</td> 
            <td>{{customer_email}}</td> 
            <td>{{customer_phone_number}}</td>
            <td>{{customer_address}}</td>
            <td>{{customer_birthdate}}</td>
            
            {{!-- connects to js files to make delete and update work --}}
            <td><button onclick="deleteCustomer({{customer_ID}})">Delete</button></td>
            <td><a href="/customers/{{customer_ID}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

{{!-- input fields when adding new customer --}}
<h3>Add new customer:</h3>
<form id="add_customer" action="/customers" method="post">
    <input type="text" id="fname" name="customer_first_name" placeholder="First Name"><br>
    <input type="text" id="lname" name="customer_last_name" placeholder="Last Name"><br>
    <input type="text" id="cemail" name="customer_email" placeholder="Email"><br>
    <input type="text" id="cphone" name="customer_phone_number" placeholder="Phone #"><br>
    <input type="text" id="caddress" name="customer_address" placeholder="Address"><br>
    <label for="bdate">Birthday:</label>
    <input type="date" id="bdate" name="customer_birthdate" value="MM-DD-YYYY"><br>
    <input type="submit" value="Add"><br><br>
 </form>
<br/>


</html>
