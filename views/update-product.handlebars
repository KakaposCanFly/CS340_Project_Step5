<html>
<link href="/styles.css" rel="stylesheet" type="text/css" />
<h1>Update {{product.product_type}}:</h1>
<form id="update-product" action="/products" method="post">
    {{!-- Pre-populate the input fields with the attributes' current values --}}
    Type: <input type="text" name="product_type" value="{{product.product_type}}"><br>
    Name: <input type="text" name="product_name" value="{{product.product_name}}"><br>
    Distributor: <select name="distributor_ID" id="distributor-selector">
        {{#each distributors}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Retail Price: <input type="text" name="retail_price" value="{{product.retail_price}}"><br>
    Release Date: <input type="date" name="release_date" value="{{product.release_date}}"><br>
    <p> Please re-enter the date before submission </p>
    Stock Quantity: <input type="text" name="quant_in_stock" value="{{product.quant_in_stock}}"><br>
</form>
<button onclick="updateProducts({{product.product_ID}})">Update</button>
<script defer>selectDistributor({{product.distributor_ID}});</script>
</html>
